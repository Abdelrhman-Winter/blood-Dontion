<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title> Blood Donation System </title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="/public/assets/img/title.jpg" rel="icon">

    <!-- Template Main CSS File -->
    <link href="/public/assets/css/admin.css" rel="stylesheet">
</head>

<body>

    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="/">
                        <span class="icon"><ion-icon name="fitness-sharp"></ion-icon></span>
                        <span class="title"> Blood Donation </span>
                    </a>
                </li>
                <li>
                    <a href="/mainAdmin/addNewHospitalAdmin">
                        <span class="icon"><ion-icon name="person-add-sharp"></ion-icon></span>
                        <span class="title"> Add Hospital Admin </span>
                    </a>
                </li>
                <li>
                    <a href="/mainAdmin/showHospitalAdmin">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title"> Show All Hospital Admins </span>
                    </a>
                </li>
                <li>
                    <a href="/users/logout">
                        <span class="icon"><ion-icon name="log-out"></ion-icon></span>
                        <span class="title"> Logout </span>
                    </a>
                </li>

            </ul>
        </div>
        <!-- main -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
                <!-- search -->
                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>
            </div>

            <div class="details">
                <!-- Order details list -->
                <div class="recentOrder">
                    <div class="cardHeader">
                        <h2>Hospital Admin</h2>
                        <a href="#" class="btn">View All</a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Name</td>
                                <td>Hospital Name</td>
                                <td>Birth Date</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% hostAdmin.forEach((result,index)=> { %>
                                <tr>
                                    <td>
                                        <%=index+1%>
                                    </td>
                                    <td>
                                        <%=result.adminname%>
                                    </td>
                                    <td>
                                        <%=result.hospitalName%>
                                    </td>
                                    <td>19/2/2001</td>
                                    <td>
                                        <form action="/mainAdmin/deleteHospitalAdmin/<%=result.id%>" method="post">
                                            <button class="btn"><a class="text">Remove</a></button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script>
        //MenuToggle 
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('.main');

        toggle.onclick = function () {
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        }

        //add hovered class in selected list item
        let list = document.querySelectorAll('.navigation li');
        function avtiveLink() {
            list.forEach((item) =>
                item.classList.remove('hovered'));
            this.classList.add('hovered');
        }
        list.forEach((item) =>
            item.addEventListener('mouseover', avtiveLink));
    </script>
</body>

</html>