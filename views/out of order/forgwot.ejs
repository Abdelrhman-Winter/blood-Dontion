<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"> forgot password</h1>
            <%- include('partials/messages') %>
                <form action="/users/forgot" method="POST">
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mb-3 " style="width: 100%;">Send
                        mail</button>
                </form>
                <p class="lead mt-4">
                    No Account? <a href="/users/register">Register</a>
                </p>
                <p class="lead mt-4">

                    Remembered your Account?<a href="/users/login">Login</a>
                </p>
        </div>
    </div>
</div>