<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title> Blood Donation System </title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="/public/assets/img/title.jpg" rel="icon">

    <!-- Template Main CSS File -->
    <link href="/public/assets/css/admin.css" rel="stylesheet">
</head>

<body>

    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="/">
                        <span class="icon"><ion-icon name="fitness-sharp"></ion-icon></span>
                        <span class="title"> Blood Donation </span>
                    </a>
                </li>
                <li>
                    <a href="/hostAdmins/getUsers">
                        <span class="icon"><ion-icon name="person-add-sharp"></ion-icon></span>
                        <span class="title"> Donors </span>
                    </a>
                </li>
                <li>
                    <a href="/hostAdmins/request-admin">
                        <span class="icon"><ion-icon name="mail-unread"></ion-icon></span>
                        <span class="title"> Request </span>
                    </a>
                </li>
                <li>
                    <a href="/hostAdmins/bags">
                        <span class="icon"><ion-icon name="flask"></ion-icon></span>
                        <span class="title"> Blood Bags </span>
                    </a>
                </li>
                <li>
                    <a href="/hostAdmins/report">
                        <span class="icon"><ion-icon name="albums"></ion-icon></span>
                        <span class="title"> Report </span>
                    </a>
                </li>
                <li>
                    <a href="/hostAdmins/profile">
                        <span class="icon"><ion-icon name="accessibility-sharp"></ion-icon></span>
                        <span class="title"> Profile </span>
                    </a>
                </li>
                <li>
                    <a href="/users/logout">
                        <span class="icon"><ion-icon name="log-out"></ion-icon></span>
                        <span class="title"> Logout </span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- main -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
                <!-- search -->
                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>
            </div>

            <!-- Cards -->
            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">
                            <%=num_donors%>
                        </div>
                        <div class="cardName">Donors</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="people"></ion-icon>
                    </div>
                </div>
                <div class="card">
                    <div>
                        <div class="numbers">
                            <%=num_bags%>
                        </div>
                        <div class="cardName">Blood Bags</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="flask"></ion-icon>
                    </div>
                </div>
                <div class="card">
                    <div>
                        <div class="numbers">
                            <%=num_req%>
                        </div>
                        <div class="cardName">Request</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="mail-unread"></ion-icon>
                    </div>
                </div>

            </div>


            <div class="details">
                <!-- Order details list -->
                <div class="recentOrder">
                    <div class="cardHeader">
                        <h2>Request</h2>
                        <a href="#" class="btn">View All</a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Name</td>
                                <td>Information</td>
                                <td>Message</td>
                                <td>Reject</td>
                                <td>Accept</td>

                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach((result,index)=> { %>
                                <tr>
                                    <td>
                                        <%=index+1%>
                                    </td>
                                    <td>
                                        <%=result.user.firstName%>
                                            <%=result.user.lastName%>
                                    </td>

                                    <td>
                                        <%=result.user.email%> <br><br>
                                            <%=result.user.phone%> <br><br>
                                                <%=result.user.address%> <br><br>
                                                    <%=result.user.bloodType%>
                                    </td>
                                    <td>
                                        <%=result.additionalInfo%>
                                    </td>
                                    <td>

                                        <form action="/hostAdmins/request-admin" method="POST">
                                            <button class="btn" name="rejBtn" value="<%=result.user._id%>"><a
                                                    class="text">Reject</a></button>
                                        </form>
                                    </td>
                                    <td>

                                        <form action="/hostAdmins/request-admin" method="post">
                                            <textarea name="msg" id="" cols="30" rows="10"></textarea><br>
                                            <button class="btn" name="id"><a class="text">Accept</a></button>
                                            <input type="hidden" name="email" value="<%=result.user.email%>">
                                        </form>

                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script>
        //MenuToggle 
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('.main');

        toggle.onclick = function () {
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        }

        //add hovered class in selected list item
        let list = document.querySelectorAll('.navigation li');
        function avtiveLink() {
            list.forEach((item) =>
                item.classList.remove('hovered'));
            this.classList.add('hovered');
        }
        list.forEach((item) =>
            item.addEventListener('mouseover', avtiveLink));
    </script>
</body>

</html>